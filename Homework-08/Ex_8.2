import string

sentence = "I am @ Python @ senior ^ pomidor"

list_with_words = sentence.split()
new_list = []

for word in list_with_words:
    if not word in string.punctuation:
        new_list.append(word)

print(new_list)

# Класичний 'list comprehension'
print([word for word in list_with_words if not word in string.punctuation])

# 'list comprehension' за допомогою функції 'filter'
print(list(filter(lambda x: not x in string.punctuation, list_with_words)))
